<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title>{% block title %}Conduit{% endblock %}</title>
    {% block stylesheets %}
        <!-- Import Ionicon icons & Google Fonts our Bootstrap theme relies on -->
        <link
            href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css"
            rel="stylesheet"
            type="text/css"
        />
        <link
            href="//fonts.googleapis.com/css?family=Titillium+Web:700|Source+Serif+Pro:400,700|Merriweather+Sans:400,700|Source+Sans+Pro:400,300,600,700,300italic,400italic,600italic,700italic"
            rel="stylesheet"
            type="text/css"
        />
        <!-- Import the custom Bootstrap 4 theme from our hosted CDN -->
        <link rel="stylesheet" href="//demo.productionready.io/main.css"/>
    {% endblock %}
    {% block javascripts %}
        <script src="https://unpkg.com/htmx.org@1.9.10"></script>
        <style>
            .toast-container {
                position: fixed;
                top: 20px;
                right: 20px;
                z-index: 9999;
                pointer-events: none;
            }

            .toast {
                pointer-events: auto;
                padding: 12px 16px;
                margin-bottom: 10px;
                border-radius: 4px;
                min-width: 300px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.15);
                font-family: inherit;
                font-size: 14px;
            }

            .toast-success {
                background-color: #28a745;
                color: white;
                border-left: 4px solid #1e7e34;
            }

            .toast-error {
                background-color: #dc3545;
                color: white;
                border-left: 4px solid #c82333;
            }

            .toast-content {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .toast-icon {
                font-weight: bold;
                font-size: 16px;
            }

            .toast-message {
                flex: 1;
            }

            .toast-close {
                background: none;
                border: none;
                color: inherit;
                font-size: 18px;
                cursor: pointer;
                padding: 0;
                line-height: 1;
                opacity: 0.7;
            }

            .toast-close:hover {
                opacity: 1;
            }

            @keyframes slideIn {
                from {
                    transform: translateX(100%);
                    opacity: 0;
                }
                to {
                    transform: translateX(0);
                    opacity: 1;
                }
            }

            @keyframes fadeOut {
                from {
                    opacity: 1;
                }
                to {
                    opacity: 0;
                    transform: translateX(100%);
                }
            }
        </style>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const observer = new MutationObserver(function(mutations) {
                    mutations.forEach(function(mutation) {
                        mutation.addedNodes.forEach(function(node) {
                            if (node.nodeType === 1 && node.classList && node.classList.contains('toast')) {
                                setTimeout(function() {
                                    node.style.animation = 'fadeOut 0.3s ease-out forwards';
                                    setTimeout(function() {
                                        if (node.parentNode) {
                                            node.parentNode.removeChild(node);
                                        }
                                    }, 300);
                                }, 4000);
                            }
                        });
                    });
                });

                const toastContainer = document.getElementById('toast-container');
                if (toastContainer) {
                    observer.observe(toastContainer, { childList: true });
                }
            });
        </script>
    {% endblock %}
</head>
<body>
    <div id="toast-container" class="toast-container"></div>
    {% block body %}
        <nav class="navbar navbar-light">
            <div class="container">
                <a class="navbar-brand" href="/">conduit</a>
                <ul class="nav navbar-nav pull-xs-right">
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.pathInfo is same as(path('app_home')) ? 'active'}}" href="/">Home</a>
                    </li>
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.pathInfo is same as(path('app_login')) ? 'active' }}"
                               href="{{ path('app_login') }}">Sign in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.pathInfo is same as(path('app_register')) ? 'active' }}"
                               href="{{ path('app_register') }}">Sign up</a>
                        </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.pathInfo is same as(path('app_editor_new')) ? 'active'}}" href="{{ path('app_editor_new') }}">
                            <i class="ion-compose"></i>&nbsp;New Article
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.pathInfo is same as(path('app_settings')) ? 'active'}}" href="{{ path('app_settings') }}">
                            <i class="ion-gear-a"></i>&nbsp;Settings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_profile', {username: app.user.username}) }}">
                            <img src="{{ app.user.image }}" class="user-pic" />
                            {{ app.user.username }}
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        {% block main_content %} {% endblock main_content %}

        <footer>
            {% block footer %}
                <div class="container">
                    <a href="/" class="logo-font">conduit</a>
                    <span class="attribution">
                  An interactive learning project from <a href="https://thinkster.io">Thinkster</a>. Code &amp;
                  design licensed under MIT.
                </span>
                </div>
            {% endblock footer %}
        </footer>
    {% endblock %}
</body>
</html>
