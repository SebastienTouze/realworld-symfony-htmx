<div class="article-preview">
    <div class="article-meta">
        <a href="{{ path('app_profile', {'username': article.author.username}) }}"><img src="{{ article.author.image }}"/></a>
        <div class="info">
            <a href="{{ path('app_profile', {'username': article.author.username}) }}" class="author">{{ article.author.username }}</a>
            <span class="date">{{ article.createdAt | date("F, d") }}</span>
        </div>
        {% include 'components/favorite-button.html.twig' with {'article': article, 'format': 'small'} %}
    </div>
    <a href="{{ path('app_article', {id: article.id, slug: article.slug}) }}" class="preview-link">
        <h1>{{ article.title }}</h1>
        <p>{{ article.description }}</p>
        <span>Read more...</span>
        <ul class="tag-list">
            {% for tag in article.tags %}
                <li class="tag-default tag-pill tag-outline">{{ tag.label }}</li>
            {% endfor %}
        </ul>
    </a>
</div>
