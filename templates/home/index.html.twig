{% extends 'base.html.twig' %}

{% block main_content %}
    <div class="home-page">
        <div class="banner">
            <div class="container">
                <h1 class="logo-font">conduit</h1>
                <p>A place to share your knowledge.</p>
            </div>
        </div>

        <div class="container page">
            <div class="row">
                <div class="col-md-9">
                    <div class="feed-toggle">
                        <ul class="nav nav-pills outline-active">
                            <li class="nav-item">
                                <a class="nav-link" href="">Your Feed</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ activeFeed and activeFeed == 'global' ? 'active' : '' }}" href="/">Global Feed</a>
                            </li>
                            {% block customfeed %}
                            {% endblock %}
                        </ul>
                    </div>

                    {%  if paginatedArticles.count < 1 %}
                        <div style="margin: 15px">ðŸ˜±Ho no! No articles here!<br/>
                            So sad... quick! ðŸ”¥Go create one!!</div>
                    {% endif %}

                    {% for article in paginatedArticles %}
                        {% include 'home/components/article-preview-item.html.twig' with {'article': article} %}
                    {% endfor %}

                    {% include 'components/pagination.html.twig' with {currentPage: currentPage, lastPage: lastPage, targetLink: 'app_home'} %}
                </div>

                <div class="col-md-3">
                    <div class="sidebar">
                        <p>Popular Tags</p>
                        <div class="tag-list" hx-get="/htmx/tags" hx-trigger="load">
                            <span>Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
